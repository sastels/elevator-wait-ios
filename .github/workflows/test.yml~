
name: Test

on:
  push:
    branches:    
      - master

jobs:
  test:
    name: Tests
    runs-on: macOS-latest
    strategy:
        matrix:
          destination: ['platform=iOS Simulator,name=iPhone 11']
    steps:
      - name: Checkout
        uses: actions/checkout@master
      - name: Install pods
        run: pod install
      - name: Run tests
        run: |
          xcodebuild clean test -workspace KasukuPrototype.xcworkspace -scheme KasukuPrototype -destination "${destination}" CODE_SIGN_IDENTITY="" CODE_SIGNING_REQUIRED=NO ONLY_ACTIVE_ARCH=NO
        env: 
         destination: ${{ matrix.destination }}
